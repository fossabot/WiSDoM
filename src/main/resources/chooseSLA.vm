<section id="initialData">
    <h1>Choose SLA</h1>
    <form>
        <div class="col-md-4">
            <div class="form-group">
                <label for="SLA-choice">SLA Type</label>
                <select name="type" id="SLA-choice" class="form-control">
                    <option value="average">Average</option>
                    <option value="percentile">Percentile</option>
                    <option value="max">Max</option>
                </select>
            </div>

            <fieldset class="form-group">
                <label for="SLA-value">SLA Value</label>
                <input type="text" name="value" id="SLA-value">
            </fieldset>

            <button type="submit" class="btn btn-primary" ic-post-to="/sendSLA" ic-target="#step" ic-indicator="#indicator">DO IT!</button>
        </div>
    </form>
</section>
